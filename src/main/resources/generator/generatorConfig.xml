<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!--Mybatis逆向工程配置文件-->
<!--运行方法:在项目目录下运行mvn mybatis-generator:generate-->
<generatorConfiguration>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--使用通用Mapper插件，指定MyMapper路径-->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.sein.utils.MyMapper"/>
        </plugin>

        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/sensor_info"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- 生成PO类的位置 -->
        <javaModelGenerator targetPackage="com.sein.pojo.po" targetProject="src/main/java"/>

        <!-- mapper映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="mappers/sensor" targetProject="src/main/resources"/>

        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator targetPackage="com.sein.dao.sensor" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <!-- 指定数据库表 -->
        <table schema="MYSQL" tableName="device_info_new">
            <!--true使用原列名，false:下划线转换成驼峰形式-->
            <property name="useActualColumnNames" value="true" />
        </table>
    </context>
</generatorConfiguration>